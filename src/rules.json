[
  {
    "name": "Rule 1",
    "description": "Mark all glassdoor emails as read",
    "predicate": "all",
    "conditions": [
      {
        "field": "from",
        "predicate": "contains",
        "value": "glassdoor"
      },
      {
        "field": "date_received",
        "predicate": "less_than_days",
        "value": "200"
      }
    ],
    "actions": [
      {
        "action": "mark_as_read",
        "params": {}
      }
    ]
  },
  {
    "name": "Rule 2",
    "description": "Mark Appwrite emails as read",
    "predicate": "any",
    "conditions": [
      {
        "field": "subject",
        "predicate": "contains",
        "value": "ruben"
      },
      {
        "field": "subject",
        "predicate": "contains",
        "value": "peter"
      },
      {
        "field": "subject",
        "predicate": "contains",
        "value": "sam"
      }
    ],
    "actions": [
      {
        "action": "mark_as_read",
        "params": {}
      }
    ]
  },
  {
    "name": "Rule 3",
    "description": "Move old unread emails",
    "predicate": "all",
    "conditions": [
      {
        "field": "subject",
        "predicate": "contains",
        "value": "Lucidchart"
